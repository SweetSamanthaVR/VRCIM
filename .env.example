# ====================================
# VRCIM Configuration File
# ====================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control!

# ====================================
# Server Configuration
# ====================================
# Port the web server listens on
PORT=3000

# Host the server binds to (localhost for local only, 0.0.0.0 for all interfaces)
HOST=localhost

# Node environment (development, production, test)
NODE_ENV=development

# IMPORTANT: When using NODE_ENV=production without HTTPS, you MUST set:
# WS_PROTOCOL=ws
# Otherwise the application will try to use wss:// which requires HTTPS

# Log level (DEBUG, INFO, WARN, ERROR, NONE)
# Default: DEBUG in development, INFO in production
# LOG_LEVEL=INFO

# Enable console logging output (true/false)
# Set to false to suppress all console output
# Default: true
# ENABLE_CONSOLE_LOGS=true

# ====================================
# Database Configuration
# ====================================
# Path to SQLite database file (relative or absolute)
DATABASE_PATH=./vrcim.db

# ====================================
# VRChat Configuration
# ====================================
# Path to VRChat log directory
# Windows default: %USERPROFILE%/AppData/LocalLow/VRChat/VRChat
# If not set, will use default Windows path
# VRCHAT_LOG_PATH=C:/Users/YourName/AppData/LocalLow/VRChat/VRChat

# ====================================
# WebSocket Configuration
# ====================================
# IMPORTANT: These settings are AUTO-DETECTED by default
# Only set these if you have a specific advanced configuration need
# 
# For most users (including production without HTTPS):
# - Leave all WebSocket settings commented out
# - The application will automatically detect the correct protocol and host

# WebSocket protocol (ws for HTTP, wss for HTTPS)
# AUTO-DETECTED: ws when accessing via http://, wss when accessing via https://
# WS_PROTOCOL=ws

# WebSocket host (hostname or IP address)
# AUTO-DETECTED: Uses the same host as your browser URL
# WS_HOST=localhost

# WebSocket port
# AUTO-DETECTED: Uses the same port as the web server (PORT setting)
# WS_PORT=3000

# ====================================
# VR Notification Configuration
# ====================================
# Enable/disable OVR Toolkit notifications (true/false)
OVRTOOLKIT_ENABLED=true

# Enable/disable XSOverlay notifications (true/false)
XSOVERLAY_ENABLED=true

# ====================================
# Pagination Configuration
# ====================================
# Players shown per page in "Players in Instance" (1–200)
PLAYERS_PER_PAGE=20

# Number of recent activity log entries fetched (initial dashboard & /api/logs default) (1–1000)
RECENT_ACTIVITY_LIMIT=50

# Cached user profiles per page (1–500)
CACHED_USERS_PER_PAGE=50

# ====================================
# Browser Configuration
# ====================================
# Automatically open browser when server starts (true/false)
# Default: true
AUTO_OPEN_BROWSER=true

# ====================================
# Notes:
# ====================================
# - Lines starting with # are comments
# - Remove # to uncomment a setting
# - Changes require server restart
# - Keep sensitive information secure
# ====================================
