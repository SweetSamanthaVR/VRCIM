# ====================================
# VRCIM Configuration File
# ====================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control!

# ====================================
# Server Configuration
# ====================================
# Port the web server listens on
PORT=3000

# Host the server binds to (localhost for local only, 0.0.0.0 for all interfaces)
HOST=localhost

# Node environment (development, production, test)
NODE_ENV=development

# Log level (DEBUG, INFO, WARN, ERROR, NONE)
# Default: DEBUG in development, INFO in production
# LOG_LEVEL=INFO

# ====================================
# Database Configuration
# ====================================
# Path to SQLite database file (relative or absolute)
DATABASE_PATH=./vrcim.db

# ====================================
# VRChat Configuration
# ====================================
# Path to VRChat log directory
# Windows default: %USERPROFILE%/AppData/LocalLow/VRChat/VRChat
# If not set, will use default Windows path
# VRCHAT_LOG_PATH=C:/Users/YourName/AppData/LocalLow/VRChat/VRChat

# ====================================
# WebSocket Configuration
# ====================================
# WebSocket protocol (ws for development, wss for production)
# WS_PROTOCOL=ws

# WebSocket host (defaults to HOST if not set)
# WS_HOST=localhost

# WebSocket port (defaults to PORT if not set)
# WS_PORT=3000

# ====================================
# VR Notification Configuration
# ====================================
# Enable/disable OVR Toolkit notifications (true/false)
OVRTOOLKIT_ENABLED=true

# Enable/disable XSOverlay notifications (true/false)
XSOVERLAY_ENABLED=true

# ====================================
# Notes:
# ====================================
# - Lines starting with # are comments
# - Remove # to uncomment a setting
# - Changes require server restart
# - Keep sensitive information secure
# ====================================
