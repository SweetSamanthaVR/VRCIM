<!DOCTYPE html>
<html lang="<%= lang || 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - VRCIM</title>
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/<%= pageCSS %>">
</head>
<body>
    <%- include('partials/header') %>
    
    <main>
        <div class="container">
            <header class="page-header">
                <div class="header-with-actions">
                    <div>
                        <h1>üë§ <span data-i18n="userDetails.title">User Profile</span></h1>
                        <p>Live data from VRChat API</p>
                    </div>
                    <div class="header-actions">
                        <button id="refresh-btn" class="btn btn-primary">üîÑ <span data-i18n="userDetails.refreshProfile">Refresh Profile</span></button>
                        <a href="/users" class="btn btn-secondary" data-i18n="userDetails.backToUsers">‚Üê Back to Users</a>
                    </div>
                </div>
            </header>

            <div id="content" class="content">
                <!-- Loading State -->
                <div id="loading-state" class="loading" data-i18n="common.loading">Loading...</div>
                
                <!-- Error State -->
                <div id="error-state" class="error" style="display: none;">
                    <h2 id="error-title" data-i18n="common.error">Error</h2>
                    <p id="error-message"></p>
                    <p id="error-additional" style="color: #aaa; margin-top: 10px;"></p>
                    <div style="margin-top: 20px;">
                        <a href="/" class="btn" data-i18n="nav.monitor">Monitor</a>
                    </div>
                </div>
                
                <!-- Profile Content (populated by JavaScript) -->
                <div id="profile-content" style="display: none;">
                    <!-- Profile Card -->
                    <div class="profile-card" id="profile-card"></div>
                    
                    <!-- Encounters Section -->
                    <div class="encounters-section" id="encounters-section" style="display: none;">
                        <h2 data-i18n="userDetails.encounterHistory">Encounter History</h2>
                        <div class="encounter-list" id="encounter-list"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
    
    <script src="/js/i18n.js"></script>
    <script src="/js/config.js"></script>
    <script src="/js/common.js"></script>
    <script src="/js/<%= pageJS %>"></script>
</body>
</html>
